<%- include('partials/header') %>

  <div class="main-content">
    <div class="section__content section__content--p30">
      <div class="container-fluid">
        <% if (error) { %>
          <div class="alert alert-danger">
            <%= error %>
          </div>
          <% } %>

            <form action="/update-admin/<%= admin._id %>" method="POST" enctype="multipart/form-data">
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label>First Name</label>
                  <input type="text" name="firstName" class="form-control" value="<%= admin.firstName %>" required />
                </div>
                <div class="col-md-6 mb-3">
                  <label>Last Name</label>
                  <input type="text" name="lastName" class="form-control" value="<%= admin.lastName %>" required />
                </div>
              </div>

              <div class="mb-3">
                <label>Email</label>
                <input type="email" name="email" class="form-control" value="<%= admin.email %>" required />
              </div>

              <div class="mb-3">
                <label>Mobile Number</label>
                <input type="text" name="mobileNumber" class="form-control" value="<%= admin.mobileNumber %>"
                  required />
              </div>

              <div class="mb-3">
                <label>Country</label>
                <input type="text" name="country" class="form-control" value="<%= admin.country %>" required />
              </div>

              <div class="mb-3">
                <label>Gender</label><br />
                <label><input type="radio" name="gender" value="Male" <%=admin.gender==='Male' ? 'checked' : '' %> />
                  Male</label>
                <label class="ms-2"><input type="radio" name="gender" value="Female" <%=admin.gender==='Female'
                    ? 'checked' : '' %> /> Female</label>
                <label class="ms-2"><input type="radio" name="gender" value="Other" <%=admin.gender==='Other'
                    ? 'checked' : '' %> /> Other</label>
              </div>

              <div class="mb-3">
                <label>Hobbies</label><br />
                <label><input type="checkbox" name="hobbies" value="Music" <%=admin.hobbies.includes('Music')
                    ? 'checked' : '' %> /> Music</label>
                <label class="ms-2"><input type="checkbox" name="hobbies" value="Coding"
                    <%=admin.hobbies.includes('Coding') ? 'checked' : '' %> />
                  Coding</label>
                <label class="ms-2"><input type="checkbox" name="hobbies" value="Travelling"
                    <%=admin.hobbies.includes('Travelling') ? 'checked' : '' %> />
                  Travelling</label>
              </div>

              <div class="mb-3">
                <label>Description</label>
                <textarea name="description" class="form-control" rows="3">
<%= admin.description %></textarea>
              </div>

              <div class="mb-3">
                <label>Current Profile Image</label><br />
                <% if (admin.profileImage) { %>
                  <img src="/Uploads/<%= admin.profileImage %>" width="100" height="100" class="rounded mb-2" />
                  <% } else { %>
                    <p>No Image</p>
                    <% } %>
                      <input type="file" name="profileImage" class="form-control mt-2" />
              </div>

              <button class="btn btn-primary w-100">Update Admin</button>
            </form>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>